  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "repository": "git@github.com:ZeeCoder/use-resize-observer.git",
  "description": "A React hook that allows you to use a ResizeObserver to measure an element's size.",
