    "delay": "^4.1.0",
    "husky": "^3.0.4",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-spec-reporter": "^0.0.32",
    "lint-staged": "^9.2.3",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^1.20.1"
